<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.welcome.first.FirstFragment">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <ImageView
        android:id="@+id/appsLogo"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:src="@drawable/logo"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/bg"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvNameApps"
        android:text="@string/welcome_text"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appsLogo"/>

    <TextView
        android:id="@+id/tvDescription"
        android:text="@string/desc_apps"
        android:textAlignment="center"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:textSize="12sp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/headerColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameApps" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:text="Mulai"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:background="@drawable/background_welcome_button"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:letterSpacing="0"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="fitXY"
        android:src="@drawable/footer_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>