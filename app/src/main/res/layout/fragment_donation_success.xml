<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_back_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo_2"
            android:layout_width="124dp"
            android:layout_height="38dp"
            android:layout_marginTop="60dp"
            android:foregroundGravity="center"
            android:src="@drawable/logo_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/saved_data"
            android:layout_width="270dp"
            android:layout_height="155dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="150dp"
            android:src="@drawable/ic_saved"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_2"
            app:layout_constraintTop_toTopOf="@id/logo_2" />

        <TextView
            android:id="@+id/tvDonationSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="50dp"
            android:fontFamily="@font/plus_jakarta_sans_extra"
            android:text="@string/donation_success"
            android:textAlignment="center"
            android:textColor="@color/headerColor"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/saved_data"
            app:layout_constraintStart_toStartOf="@+id/saved_data"
            app:layout_constraintTop_toBottomOf="@+id/saved_data" />

        <TextView
            android:id="@+id/notifikasi_donation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:text="@string/notifikasi_donation"
            android:textColor="@color/greetingTextColor"
            app:layout_constraintEnd_toEndOf="@+id/tvDonationSuccess"
            app:layout_constraintStart_toStartOf="@+id/tvDonationSuccess"
            app:layout_constraintTop_toBottomOf="@+id/tvDonationSuccess" />

        <Button
            android:id="@+id/btnShowDetail"
            android:layout_width="319dp"
            android:layout_height="44dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/background_button_rounded"
            android:gravity="center"
            android:text="@string/close"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notifikasi_donation" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton"
            android:layout_width="319dp"
            android:layout_height="44dp"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/backgroun_button_remove_data"
            android:gravity="center"
            android:text="@string/download"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/btnShowDetail"
            app:layout_constraintEnd_toEndOf="@+id/btnShowDetail"
            app:layout_constraintStart_toStartOf="@+id/btnShowDetail" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>