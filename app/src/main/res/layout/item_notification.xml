<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="95dp"
    android:backgroundTint="@color/backgroundCardNotification"
    android:orientation="vertical"
    app:cardElevation="0dp"

    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="27dp">
        
        <ImageView
            android:id="@+id/imageNotification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_wallet"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/titleNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="@string/success_topup"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textSize="16sp"
            android:textColor="@color/titleColor"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageNotification"/>

        <TextView
            android:id="@+id/descriptionNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="@string/dummy_description"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/descriptionColor"
            app:layout_constraintTop_toBottomOf="@id/titleNotification"
            app:layout_constraintStart_toEndOf="@id/imageNotification"
            app:layout_constraintBottom_toBottomOf="@id/imageNotification"/>

        <TextView
            android:id="@+id/timeNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="@string/time"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/timeColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/descriptionNotification"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>