<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:text="@string/greeting"
            android:textColor="@color/greetingTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:text="@string/dummy_user"
            android:textColor="@color/headerColor"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greeting" />

        <ImageView
            android:id="@+id/diamond"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/diamond"
            app:layout_constraintStart_toStartOf="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <ImageView
            android:id="@+id/profIleUser"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile_user"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@id/username"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/membership"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:text="@string/diamond_membership"
            android:textColor="@color/regularTextColor"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/diamond"
            app:layout_constraintTop_toBottomOf="@id/username" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchEditTextLayout"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="35dp"
            android:background="@drawable/background_text_field"
            android:backgroundTint="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:startIconDrawable="@drawable/ic_search"
            app:endIconDrawable="@drawable/ic_filter"
            app:endIconMode="custom"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/membership">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="12dp"
                android:background="@drawable/background_text_field"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textSize="14sp"
                android:hint="@string/pencarian"
                android:inputType="textEmailAddress"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/itemCaraousel"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchEditTextLayout"/>

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:dotsColor="@color/dotNotSelected"
            app:dotsCornerRadius="18dp"
            app:dotsSize="9dp"
            app:dotsSpacing="5dp"
            app:dotsWidthFactor="2.0"
            app:selectedDotColor="@color/primaryColor"
            app:progressMode="true"
            app:layout_constraintTop_toBottomOf="@+id/itemCaraousel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
          />

        <TextView
            android:id="@+id/tvFeature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="35dp"
            android:layout_marginStart="30dp"
            android:text="@string/feature"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:textSize="18sp"
            android:textColor="@color/titleColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dots_indicator"/>

        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="35dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:text="@string/see_all"
            android:textColor="@color/titleColor"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/itemCaraousel"
            app:layout_constraintHorizontal_bias="0.969"
            app:layout_constraintStart_toEndOf="@+id/tvFeature"
            app:layout_constraintTop_toBottomOf="@+id/dots_indicator" />

        <TextView
            android:id="@+id/adoption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="35dp"
            android:layout_marginStart="30dp"
            android:text="@string/adoption"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:textSize="18sp"
            android:textColor="@color/titleColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFeature"/>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginVertical="25dp"
            android:background="@color/backgroundHorizontalView"
            app:layout_constraintTop_toBottomOf="@+id/adoption">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/choose_ras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="80dp"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:text="Pilih\nhewan\nyang ingin\nkamu\nadopsi!"
                        android:textColor="@color/headerColor"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="230dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/background_button_rounded"
                        android:fontFamily="@font/plus_jakarta_sans_regular"
                        android:text="Lihat semua"
                        android:textAllCaps="false"
                        android:textSize="12dp" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="155dp"
                    android:layout_height="330dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/dog"
                        android:layout_width="145dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/breed_dog"
                        app:shapeAppearanceOverlay="@style/RoundImageView" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="145dp"
                        android:src="@drawable/ic_share" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="187dp"
                        android:src="@drawable/ic_eye" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="185dp"
                        android:fontFamily="@font/plus_jakarta_sans_regular"
                        android:text="@string/see1"
                        android:textColor="@color/hintTextColor"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/diamond"
                        app:layout_constraintTop_toBottomOf="@id/username" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="215dp"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:text="Anjing"
                        android:textColor="@color/headerColor"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/diamond"
                        app:layout_constraintTop_toBottomOf="@id/username" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="245dp"
                        android:fontFamily="@font/plus_jakarta_sans_regular"
                        android:text="@string/desc_dog"
                        android:textColor="@color/regularTextColor"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="155dp"
                    android:layout_height="330dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/cat"
                        android:layout_width="145dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/breed_cat"
                        app:shapeAppearanceOverlay="@style/RoundImageView" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="145dp"
                        android:src="@drawable/ic_share" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="187dp"
                        android:src="@drawable/ic_eye" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="185dp"
                        android:fontFamily="@font/plus_jakarta_sans_regular"
                        android:text="@string/see1"
                        android:textColor="@color/hintTextColor"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/diamond"
                        app:layout_constraintTop_toBottomOf="@id/username" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="215dp"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:text="Kucing"
                        android:textColor="@color/headerColor"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/diamond"
                        app:layout_constraintTop_toBottomOf="@id/username" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="245dp"
                        android:fontFamily="@font/plus_jakarta_sans_regular"
                        android:text="@string/desc_dog"
                        android:textColor="@color/regularTextColor"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="155dp"
                    android:layout_height="330dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/bird"
                        android:layout_width="145dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/breed_bird"
                        app:shapeAppearanceOverlay="@style/RoundImageView" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="145dp"
                        android:src="@drawable/ic_share" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="187dp"
                        android:src="@drawable/ic_eye" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="185dp"
                        android:fontFamily="@font/plus_jakarta_sans_regular"
                        android:text="@string/see1"
                        android:textColor="@color/hintTextColor"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/diamond"
                        app:layout_constraintTop_toBottomOf="@id/username" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="215dp"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:text="Burung"
                        android:textColor="@color/headerColor"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/diamond"
                        app:layout_constraintTop_toBottomOf="@id/username" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="245dp"
                        android:fontFamily="@font/plus_jakarta_sans_regular"
                        android:text="@string/desc_dog"
                        android:textColor="@color/regularTextColor"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="35dp"
            android:layout_marginStart="30dp"
            android:text="@string/news"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:textSize="18sp"
            android:textColor="@color/titleColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2"/>

        <include
            android:id="@+id/newsItem1"
            layout="@layout/item_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="1dp"
            android:background="#F2F2F2"
            app:layout_constraintTop_toBottomOf="@id/newsItem1"/>

        <include
            android:id="@+id/newsItem2"
            layout="@layout/item_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="1dp"
            android:background="#F2F2F2"
            app:layout_constraintTop_toBottomOf="@id/newsItem2"/>

        <include
            android:id="@+id/newsItem3"
            layout="@layout/item_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>