<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#F8F8F8"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        android:paddingHorizontal="25dp">

        <TextView
            android:id="@+id/tvGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general"
            android:textSize="18sp"
            android:textColor="@color/titleColor"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/ic_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_language"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGeneral"/>

        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/descriptionColor"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintStart_toEndOf="@+id/ic_lang"
            app:layout_constraintTop_toTopOf="@id/ic_lang"
            app:layout_constraintBottom_toBottomOf="@id/ic_lang"/>

        <ImageView
            android:id="@+id/ic_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            app:layout_constraintTop_toTopOf="@id/ic_lang"
            app:layout_constraintBottom_toBottomOf="@id/ic_lang"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_language"
            android:layout_marginEnd="18dp"
            android:textColor="@color/timeColor"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintTop_toTopOf="@id/ic_next"
            app:layout_constraintBottom_toBottomOf="@id/ic_next"
            app:layout_constraintEnd_toStartOf="@+id/ic_next"/>

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/timeColor"
            android:layout_marginVertical="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toEndOf="@id/ic_lang"
            app:layout_constraintTop_toBottomOf="@+id/tvLanguage"/>

        <ImageView
            android:id="@+id/ic_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bell"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1"/>

        <TextView
            android:id="@+id/tvNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifikasi"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/descriptionColor"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintStart_toEndOf="@+id/ic_notification"
            app:layout_constraintTop_toTopOf="@id/ic_notification"
            app:layout_constraintBottom_toBottomOf="@id/ic_notification"/>

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/timeColor"
            android:layout_marginVertical="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toEndOf="@id/ic_notification"
            app:layout_constraintTop_toBottomOf="@+id/tvNotification"/>

        <ImageView
            android:id="@+id/ic_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_widget"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line2"/>

        <TextView
            android:id="@+id/tvWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/descriptionColor"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintStart_toEndOf="@+id/ic_widget"
            app:layout_constraintTop_toTopOf="@id/ic_widget"
            app:layout_constraintBottom_toBottomOf="@id/ic_widget"/>

        <View
            android:id="@+id/line3"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/timeColor"
            android:layout_marginVertical="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toEndOf="@id/ic_widget"
            app:layout_constraintTop_toBottomOf="@+id/ic_widget"/>

        <ImageView
            android:id="@+id/ic_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lock"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line3"/>

        <TextView
            android:id="@+id/tvPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/descriptionColor"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintStart_toEndOf="@+id/ic_privacy"
            app:layout_constraintTop_toTopOf="@id/ic_privacy"
            app:layout_constraintBottom_toBottomOf="@id/ic_privacy"/>

        <View
            android:id="@+id/line4"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/timeColor"
            android:layout_marginVertical="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toEndOf="@id/ic_privacy"
            app:layout_constraintTop_toBottomOf="@+id/ic_privacy"/>

        <ImageView
            android:id="@+id/ic_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_help"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line4"/>

        <TextView
            android:id="@+id/tvHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/descriptionColor"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintStart_toEndOf="@+id/ic_help"
            app:layout_constraintTop_toTopOf="@id/ic_help"
            app:layout_constraintBottom_toBottomOf="@id/ic_help"/>

        <View
            android:id="@+id/line5"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/timeColor"
            android:layout_marginVertical="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toEndOf="@id/ic_help"
            app:layout_constraintTop_toBottomOf="@+id/ic_help"/>

        <ImageView
            android:id="@+id/ic_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_information"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line5"/>

        <TextView
            android:id="@+id/tvInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_app"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/descriptionColor"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintStart_toEndOf="@+id/ic_information"
            app:layout_constraintTop_toTopOf="@id/ic_information"
            app:layout_constraintBottom_toBottomOf="@id/ic_information"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>