<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/ic_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_back_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_2"
        android:layout_width="124dp"
        android:layout_height="38dp"
        android:layout_marginTop="60dp"
        android:foregroundGravity="center"
        android:src="@drawable/logo_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/saved_data"
        android:layout_width="270dp"
        android:layout_height="155dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="150dp"
        android:src="@drawable/ic_saved"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_2"
        app:layout_constraintTop_toTopOf="@id/logo_2" />

    <TextView
        android:id="@+id/tvSavedData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="50dp"
        android:fontFamily="@font/plus_jakarta_sans_extra"
        android:text="@string/saved_data"
        android:textAlignment="center"
        android:textColor="@color/headerColor"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/saved_data"
        app:layout_constraintStart_toStartOf="@+id/saved_data"
        app:layout_constraintTop_toBottomOf="@+id/saved_data" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_marginTop="150dp"
        android:text="@string/done"
        android:textAllCaps="false"
        android:letterSpacing="0"
        android:gravity="center"
        android:background="@drawable/background_button_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSavedData" />

</androidx.constraintlayout.widget.ConstraintLayout>