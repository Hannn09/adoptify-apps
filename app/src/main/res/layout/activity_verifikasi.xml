<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_back_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageLogin"
            android:layout_width="270dp"
            android:layout_height="155dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="75dp"
            android:src="@drawable/login_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.648"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_arrow"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="25dp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:text="@string/hubungkan_akun"
            android:textAlignment="center"
            android:textColor="@color/headerColor"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="@+id/imageLogin"
            app:layout_constraintStart_toStartOf="@+id/imageLogin"
            app:layout_constraintTop_toBottomOf="@+id/imageLogin" />

        <TextView
            android:id="@+id/login_with"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="25dp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:text="Pilih metode verifikasi untuk masuk"
            android:textColor="@color/regularTextColor"
            app:layout_constraintEnd_toEndOf="@+id/tvLogin"
            app:layout_constraintStart_toStartOf="@+id/tvLogin"
            app:layout_constraintTop_toBottomOf="@+id/tvLogin" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMeta"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="15dp"
            android:paddingHorizontal="30dp"
            android:text="       Masuk dengan Meta"
            android:textAllCaps="false"
            android:background="@drawable/background_verifikasi"
            android:drawableStart="@drawable/ic_meta_small"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintTop_toBottomOf="@+id/login_with" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="15dp"
            android:paddingHorizontal="30dp"
            android:text="       Masuk dengan Google"
            android:textAllCaps="false"
            android:background="@drawable/background_verifikasi"
            android:drawableStart="@drawable/ic_google_small"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintTop_toBottomOf="@+id/btnMeta" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnInstagram"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="15dp"
            android:paddingHorizontal="30dp"
            android:text="       Masuk dengan Instagram"
            android:textAllCaps="false"
            android:background="@drawable/background_verifikasi"
            android:drawableStart="@drawable/ic_instagram_small"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintTop_toBottomOf="@+id/btnGoogle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="15dp"
            android:paddingHorizontal="30dp"
            android:text="       Masuk dengan WhatsApp"
            android:textAllCaps="false"
            android:background="@drawable/background_verifikasi"
            android:drawableStart="@drawable/ic_whatsapp_small"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintTop_toBottomOf="@+id/btnInstagram" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/hintTextColor"
            app:layout_constraintBottom_toBottomOf="@+id/or"
            app:layout_constraintEnd_toEndOf="@+id/btnWhatsapp"
            app:layout_constraintStart_toEndOf="@+id/or"
            app:layout_constraintTop_toTopOf="@+id/or"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="661dp" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:text="atau"
            android:textColor="@color/regularTextColor"
            app:layout_constraintEnd_toEndOf="@+id/btnWhatsapp"
            app:layout_constraintStart_toStartOf="@+id/btnWhatsapp"
            app:layout_constraintTop_toBottomOf="@+id/btnWhatsapp" />

        <View
            android:layout_width="00dp"
            android:layout_height="1dp"
            android:background="@color/hintTextColor"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/or"
            app:layout_constraintEnd_toStartOf="@+id/or"
            app:layout_constraintStart_toStartOf="@+id/btnWhatsapp"
            app:layout_constraintTop_toTopOf="@+id/or"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="661dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="15dp"
            android:layout_marginBottom="20dp"
            android:text="@string/btnregister"
            android:textStyle="bold"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintTop_toBottomOf="@+id/or"
            tools:layout_editor_absoluteX="35dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>