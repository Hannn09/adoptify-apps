<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shadows"
    app:cardCornerRadius="15dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wallet"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_wallet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rupiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:text="@string/rupiah"
            android:textColor="@color/titleColor"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/wallet"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:text="@string/nominal"
            android:textColor="@color/titleColor"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/rupiah"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_plus2"
            app:layout_constraintEnd_toStartOf="@+id/btnDonation"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:text="@string/topup"
            android:textColor="@color/hintTextColor"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/plus"
            app:layout_constraintStart_toStartOf="@+id/plus"
            app:layout_constraintTop_toTopOf="@+id/plus" />

        <ImageView
            android:id="@+id/btnDonation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_donation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDonation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:text="@string/donation"
            android:textColor="@color/hintTextColor"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/btnDonation"
            app:layout_constraintStart_toStartOf="@+id/btnDonation"
            app:layout_constraintTop_toTopOf="@+id/btnDonation" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>