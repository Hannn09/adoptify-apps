<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_header"
    android:paddingVertical="20dp"
    android:elevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ic_arrow_back"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_back_black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/notification"
        app:layout_constraintTop_toTopOf="@+id/notification"/>

    <TextView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_extra"
        android:text="Shelter"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="32dp"
        android:textSize="22sp"
        android:textColor="@color/headerColor"
        app:layout_constraintStart_toEndOf="@id/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/find_shelter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:text="Temukan shelter terdekat"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/headerColor"
        app:layout_constraintStart_toStartOf="@id/notification"
        app:layout_constraintTop_toBottomOf="@id/notification"/>



</androidx.constraintlayout.widget.ConstraintLayout>