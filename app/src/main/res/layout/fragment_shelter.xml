<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shelter.ShelterFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchEditTextLayout"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_text_field"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:startIconDrawable="@drawable/ic_search"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="12dp"
            android:background="@drawable/background_text_field"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:textSize="14sp"
            android:hint="@string/pencarian"
            android:inputType="textEmailAddress"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/banner"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchEditTextLayout"/>
    
    <TextView
        android:id="@+id/find_shelter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_shelter"
        android:fontFamily="@font/plus_jakarta_sans_extra"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="35dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@+id/banner"
        app:layout_constraintStart_toStartOf="@+id/banner"/>
    
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_shelter"
        app:layout_constraintBottom_toBottomOf="@+id/find_shelter"
        app:layout_constraintEnd_toEndOf="@+id/banner"/>
    
    <Button
        android:id="@+id/btnActivity"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:paddingVertical="20dp"
        android:drawableTop="@drawable/ic_activity"
        android:text="@string/activity"
        android:elevation="0dp"
        android:textAllCaps="false"
        android:background="@drawable/background_button_shelter"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:textSize="12sp"
        app:backgroundTint="#F5F5F5"
        android:textColor="@color/regularTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner"/>

    <Button
        android:id="@+id/btnNews"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:paddingVertical="20dp"
        android:drawableTop="@drawable/ic_news"
        android:text="@string/news"
        android:elevation="0dp"
        android:textAllCaps="false"
        android:background="@drawable/background_button_shelter"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:textSize="12sp"
        app:backgroundTint="#F5F5F5"
        android:textColor="@color/regularTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner"/>

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:paddingVertical="20dp"
        android:drawableTop="@drawable/ic_menu_settings"
        android:text="@string/settings"
        android:elevation="0dp"
        android:textAllCaps="false"
        android:background="@drawable/background_button_shelter"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:textSize="12sp"
        app:backgroundTint="#F5F5F5"
        android:textColor="@color/regularTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnActivity"/>

    <Button
        android:id="@+id/btnWallet"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:paddingVertical="20dp"
        android:drawableTop="@drawable/ic_wallet_black"
        android:text="@string/wallet_digital"
        android:elevation="0dp"
        android:textAllCaps="false"
        android:background="@drawable/background_button_shelter"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:textSize="12sp"
        app:backgroundTint="#F5F5F5"
        android:textColor="@color/regularTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNews"/>

</androidx.constraintlayout.widget.ConstraintLayout>